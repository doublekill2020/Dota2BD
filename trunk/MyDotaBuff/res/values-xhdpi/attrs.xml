<?xml version="1.0" encoding="utf-8"?>
<resources>
     <!-- PullListView -->
    <declare-styleable name="PullListView">
        <attr name="enableHeader" format="boolean" />
        <attr name="enableFooter" format="boolean"/>
    </declare-styleable>
    
    <!-- LayerFrameLayout -->
    <declare-styleable name="LayerFrameLayout">
        <attr name="shadow_drawable" format="boolean" />
        <attr name="shadow_width" format="dimension" />
        <attr name="close_on_tapEnabled" format="boolean" />
        <attr name="stickTo" format="enum">
            <enum name="auto" value="0" />
            <enum name="right" value="-1" />
            <enum name="left" value="-2" />
            <enum name="middle" value="-3" />
        </attr>
    </declare-styleable>
    
</resources>
