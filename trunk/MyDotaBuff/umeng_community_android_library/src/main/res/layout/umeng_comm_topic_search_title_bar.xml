<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <!-- title -->

    <RelativeLayout
        android:id="@+id/umeng_comm_topic_edittext_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <ImageButton
            android:id="@+id/umeng_comm_back"
            android:layout_width="26dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/umeng_comm_desc"
            android:scaleType="fitCenter"
            android:src="@drawable/umeng_comm_back_bt" />

        <Button
            android:id="@+id/umeng_comm_topic_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="@string/umeng_comm_search_key"
            android:textColor="@color/umeng_comm_text_default_color"
            android:textSize="@dimen/text_big16_size" />

        <EditText
            android:id="@+id/umeng_comm_topic_edittext"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/umeng_comm_topic_search"
            android:layout_toRightOf="@id/umeng_comm_back"
            android:background="@drawable/umeng_community_topic_bg"
            android:hint="@string/umeng_comm_search_hint"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLength="18"
            android:textSize="@dimen/text_big16_size" />
    </RelativeLayout>

    <include layout="@layout/umeng_comm_divide_line" />

</LinearLayout>