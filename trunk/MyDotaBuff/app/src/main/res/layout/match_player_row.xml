<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hero_img"
                android:layout_width="132dp"
                android:layout_height="76dp"
                android:padding="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hero_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Legion Commander"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/player_lvl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level: 17"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/leaver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="14sp"
                        android:visibility="invisible" />
                </LinearLayout>


                <TextView
                    android:id="@+id/nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TableRow>

                <TextView
                    android:id="@+id/kills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="Kills:" />

                <TextView
                    android:id="@+id/gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="Gold:" />

                <TextView
                    android:id="@+id/gpm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="GPM:" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/death"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="Death:" />

                <TextView
                    android:id="@+id/last_hits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="Last hits:" />

                <TextView
                    android:id="@+id/xpm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="XPM:" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/assists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="Assists:" />

                <TextView
                    android:id="@+id/denies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="Denies:" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/unit_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item0"
                    android:duplicateParentState="false"
                    android:layout_width="@dimen/match_player_summary_width"
                    android:layout_height="@dimen/match_player_summary_height"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:padding="2dp"
                    android:src="@drawable/default_pic" />

                <ImageView
                    android:id="@+id/item1"
                    android:duplicateParentState="false"
                    android:layout_width="@dimen/match_player_summary_width"
                    android:layout_height="@dimen/match_player_summary_height"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:padding="2dp"
                    android:src="@drawable/default_pic" />

                <ImageView
                    android:id="@+id/item2"
                    android:duplicateParentState="false"
                    android:layout_width="@dimen/match_player_summary_width"
                    android:layout_height="@dimen/match_player_summary_height"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:padding="2dp"
                    android:src="@drawable/default_pic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item3"
                    android:duplicateParentState="false"
                    android:layout_width="@dimen/match_player_summary_width"
                    android:layout_height="@dimen/match_player_summary_height"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:padding="2dp"
                    android:src="@drawable/default_pic" />

                <ImageView
                    android:id="@+id/item4"
                    android:duplicateParentState="false"
                    android:layout_width="@dimen/match_player_summary_width"
                    android:layout_height="@dimen/match_player_summary_height"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:padding="2dp"
                    android:src="@drawable/default_pic" />

                <ImageView
                    android:id="@+id/item5"
                    android:duplicateParentState="false"
                    android:layout_width="@dimen/match_player_summary_width"
                    android:layout_height="@dimen/match_player_summary_height"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:padding="2dp"
                    android:src="@drawable/default_pic" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/additional_unit_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/additional_unit_item0"
                    android:duplicateParentState="false"
                    android:layout_width="@dimen/match_player_summary_width"
                    android:layout_height="@dimen/match_player_summary_height"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:padding="2dp"
                    android:src="@drawable/default_pic" />

                <ImageView
                    android:id="@+id/additional_unit_item1"
                    android:duplicateParentState="false"
                    android:layout_width="@dimen/match_player_summary_width"
                    android:layout_height="@dimen/match_player_summary_height"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:padding="2dp"
                    android:src="@drawable/default_pic" />

                <ImageView
                    android:id="@+id/additional_unit_item2"
                    android:duplicateParentState="false"
                    android:layout_width="@dimen/match_player_summary_width"
                    android:layout_height="@dimen/match_player_summary_height"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:padding="2dp"
                    android:src="@drawable/default_pic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/additional_unit_item3"
                    android:duplicateParentState="false"
                    android:layout_width="@dimen/match_player_summary_width"
                    android:layout_height="@dimen/match_player_summary_height"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:padding="2dp"
                    android:src="@drawable/default_pic" />

                <ImageView
                    android:id="@+id/additional_unit_item4"
                    android:duplicateParentState="false"
                    android:layout_width="@dimen/match_player_summary_width"
                    android:layout_height="@dimen/match_player_summary_height"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:padding="2dp"
                    android:src="@drawable/default_pic" />

                <ImageView
                    android:id="@+id/additional_unit_item5"
                    android:duplicateParentState="false"
                    android:layout_width="@dimen/match_player_summary_width"
                    android:layout_height="@dimen/match_player_summary_height"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:padding="2dp"
                    android:src="@drawable/default_pic" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>