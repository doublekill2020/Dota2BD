    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/common_toolbar" />

    <FrameLayout
        android:id="@+id/video_fullView"
        android:layout_width="fill_parent"
